
set nocompatible
set hidden          "/ Handle multiple buffers better. if hidden is not set, TextEdit might fail.
set laststatus=2    "/ Show the status line all the time
set nobackup
set nowritebackup
set noswapfile


let DIR = getcwd()
echom DIR

"\ Use vim-plug as plugin system
if !filereadable(DIR.'/dot-vim/plug.vim')
  echom 'executing curl...'
  silent !curl --insecure -fLo ./dot-vim/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
endif

call plug#begin(DIR.'/dot-vim/plugged')
  Plug 'ApolloTang/theme-vim--snow'
  Plug 'mg979/vim-visual-multi', {'branch': 'master'}
call plug#end()

if has("gui_running")
  if has("gui_gtk2")
    echo 'plateform: gui_gtk2'
    set background=light
    colorscheme snow
    set guifont=Inconsolata\ 9
  elseif has("gui_macvim")
    echo 'plateform: gui_macvim'
    set background=light
    colorscheme snow
    set guifont=Inconsolata:h14
    hi Pmenu ctermbg=gray guibg=#dfe7fb
  elseif has("gui_win32")
    echo 'plateform: gui_win32'
    set guifont=Consolas:h9:cANSI
  endif
endif


let g:VM_maps = {}
let g:VM_maps["Add Cursor Down"]             = '∆'  "/ M-j
let g:VM_maps["Add Cursor Up"]               = '˚'  "/ M-k
let g:VM_maps["Select h"]                    = '˙'  "/ M-h
let g:VM_maps["Select l"]                    = '¬'  "/ M-l

let g:VM_mouse_mappings = 1

"/---eof---
